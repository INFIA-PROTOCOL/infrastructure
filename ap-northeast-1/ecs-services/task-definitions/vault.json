[
  {
    "name": "vault",
    "image": "vault:0.9.0",
    "cpu": 50,
    "memory": 64,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8200
      }
    ],
    "privileged": true,
    "command": ["server"],
    "environment" : [
      { "name" : "VAULT_LOCAL_CONFIG", "value" : "{\"storage\": {\"s3\": {}}, \"listener\": {\"tcp\":{\"address\":\"0.0.0.0:8200\", \"tls_disable\":1}}}" },
      { "name" : "AWS_S3_BUCKET", "value" : "kr.sideeffect.vault" },
      { "name" : "AWS_REGION", "value" : "ap-northeast-1" }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "ap-northeast-1-ecs",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "sideeffect-cluster"
      }
    }
  }
]
